@page
@model AutEmplAcc.Pages.Branch.IndexModel

@{
    ViewData["Title"] = "Изменить филиалы";
}
<head>
    <link rel="stylesheet" href="~/css/tableEmpl.css" />
</head>
<h1>Список филиалов</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Branches[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branches[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Branches) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BranchId">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.BranchId">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.BranchId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-page="../Index">Назад</a>
</p>
